            script(src='/theme/bootstrap-3/js/bootstrap.min.js')
            script(src='/theme/select2-3.4.5/select2.min.js')
            script(src='//cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js')
            script(src='/theme/js/jquery.peity.min.js')
