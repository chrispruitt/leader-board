    title= title

    // import Deployd
    script(src="../dpd.js")
    // import Angular
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.1/angular.min.js')

    // edo
    link(rel='shortcut icon', href='/theme/edo/images/e-favicon.png', type='image/png')
    meta(http-equiv='Content-type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    link(rel='stylesheet', href='/theme/css/jquery-ui-bootstrap/jquery-ui-1.10.0.custom.css')
    link(rel='stylesheet', href='/theme/uniform/themes/default/css/uniform.default.min.css')
    link(rel='stylesheet', href='/theme/select2-3.4.5/select2.css')
    link(rel='stylesheet', href='/theme/css/datepicker3.css')
    link(rel='stylesheet', href='/theme/font-awesome/css/font-awesome.min.css')
    link(rel='stylesheet', href='/theme/jstree/themes/default/style.min.css')
    link(rel='stylesheet', href='/theme/edo/css/theme.css')
    link(rel='stylesheet', href='/theme/js/google-code-prettify/prettify.css')
    script(src='/theme/js/html5shiv.js')
    script(src='/theme/js/respond.min.js')
    script(src='/theme/js/jquery-1.10.2.min.js')
    script(src='/theme/edo/js/eventBus.js')
    script(src='/theme/edo/js/edo.js')
    script(src='/theme/edo/js/edo.geo.js')


  body
    #header.row
      .col-md-2.col-sm-2
        h1
          a(href="/") #{title}
      .col-lg-4.col-lg-offset-6.col-md-5.col-md-offset-5.col-sm-7.col-sm-offset-3.col-xs-12
        ul.nav.nav-pills.navbar-right

          li
            a(title='', href='/dashboard', target='_blank')
              i.fa.fa-fw.fa-wrench
              span.text &nbsp;Administration

    .container
    .row
      .col-sm-1.col-md-3.col-lg-2
        include sidebar

      #content.col-sm-11.col-md-9.col-lg-10

        // Main content
        block content

        .row(style='background: #333')
          #footer.row
            .col-sm-3
              h4 GET TO KNOW EDO
              ul
                li
                  a(target='_blank', href='http://www.edointeractive.com/resources/') Resources
                li
                  a(target='_blank', href='http://www.edointeractive.com/about/') About
                li
                  a(target='_blank', href='http://www.edointeractive.com/blog/') Blog
                li
                  a(target='_blank', href='http://www.edointeractive.com/contact/') Contact
                li
                  a(target='_blank', href='http://www.edointeractive.com/sitemap/') Sitemap
                li
                  a(target='_blank', href='http://www.edointeractive.com/legalprivacy-policy/') Privacy Policy
            .col-sm-3
              h4 WHAT EDO OFFERS
              ul
                li
                  a(target='_blank', href='http://www.edointeractive.com/financial-institutions/') Financial Institutions
                li
                  a(target='_blank', href='http://www.edointeractive.com/brands-agencies/') Brands &amp; Agencies
                li
                  a(target='_blank', href='http://www.edointeractive.com/small-businesses/') Small Business
                li
                  a(target='_blank', href='http://www.edointeractive.com/card-linked-offers/') Card Linked Offers
            .col-sm-3
              h4 STAY IN TOUCH
              ul.social-networks
                li
                  a.linkedin(target='_blank', href='http://www.linkedin.com/company/edo-interactive')
                li
                  a.twitter(target='_blank', href='https://twitter.com/#!/edointeractive')
                li
                  a.mail(href='mailto:info@edointeractive.com')
              p Follow us on a social network,
                br
                | or
                a(target='_blank', href='http://www.edointeractive.com/contact-us') contact us online
                | .
              .phone
                i.fa.fa-phone
                |  877.340.0036
